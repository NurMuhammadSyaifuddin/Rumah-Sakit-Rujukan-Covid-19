<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="textInputStyle">@style/TextInputStyle</item>

        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">@dimen/dp_0</item>
        <item name="boxStrokeWidthFocused">@dimen/dp_0</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowMinWidthMinor">100%</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MyButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="MyButtonTheme.RED" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor.RED</item>
    </style>

    <style name="MyButtonTheme.WHITE" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor.WHITE</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">@color/textColorPrimaryDark</item>
    </style>

    <style name="ButtonStyleTextColor.RED">
        <item name="colorPrimary">@android:color/holo_red_light</item>
    </style>

    <style name="ButtonStyleTextColor.WHITE">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CustomDialogLoading" parent="Theme.MaterialComponents.Light.Dialog.Alert.Bridge">
        <item name="android:windowMinWidthMajor">@dimen/dp_0</item>
        <item name="android:windowMinWidthMinor">@dimen/dp_0</item>
    </style>

</resources>
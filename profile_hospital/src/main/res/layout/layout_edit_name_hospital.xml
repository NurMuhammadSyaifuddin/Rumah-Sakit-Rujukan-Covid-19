<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_24">

    <TextView
        android:id="@+id/text_view_enter_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/enter_hospital_name"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/textColorPrimary"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edt_enter_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/text_view_enter_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="LabelFor,TextFields" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/save"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/edt_enter_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/cancel"
        android:layout_marginEnd="@dimen/dp_8"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/btn_save"
        app:layout_constraintEnd_toStartOf="@id/btn_save"
        app:layout_constraintBottom_toBottomOf="@id/btn_save"/>

</androidx.constraintlayout.widget.ConstraintLayout>